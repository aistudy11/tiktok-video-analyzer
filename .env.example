# ===========================================
# TikTok Video Analyzer - Environment Variables
# ===========================================

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=tiktok_analyzer

# Redis
REDIS_URL=redis://redis:6379/0

# Backend API
API_SECRET_KEY=tiktok-analyzer-secret-key-2024
DEBUG=false

# AI Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_BASE_URL=https://generativelanguage.googleapis.com
GEMINI_MODEL=gemini-2.5-pro

# Feishu (Lark) Integration
FEISHU_APP_ID=your-feishu-app-id
FEISHU_APP_SECRET=your-feishu-app-secret
FEISHU_BITABLE_APP_TOKEN=your-bitable-app-token
FEISHU_BITABLE_TABLE_ID=your-bitable-table-id

# Storage Paths
STORAGE_PATH=/app/storage
VIDEO_STORAGE_PATH=/app/storage/videos
ANALYSIS_STORAGE_PATH=/app/storage/analysis

# ===========================================
# Frontend Configuration (Next.js)
# ===========================================

# Authentication
AUTH_SECRET=your-32-character-secret-key-here
AUTH_URL=http://localhost:3000

# App Settings
NEXT_PUBLIC_APP_NAME=TikTok Analyzer
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OAuth Providers (optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Email Service (optional)
# RESEND_API_KEY=

# Payment Providers (optional)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=
# PAYPAL_CLIENT_ID=
# PAYPAL_CLIENT_SECRET=

# Cloud Storage (optional)
